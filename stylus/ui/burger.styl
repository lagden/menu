.menu
  width 60px
  height 60px
  background-color transparent
  border 0
  outline none
  cursor pointer
  &:active
  &:focus
    outline none

.menu__burguer
  display inline-block
  vertical-align middle
  position relative
  width 18px
  height 2px
  background-color $cor1
  transition background-color 0.3s

  &:before
  &:after
    content ''
    width 100%
    height 100%
    position absolute
    right 0
    background-color $cor1
    transition transform 0.3s, top 0.3s, background-color 0s

  &:before
    top -5px
  &:after
    top 5px

.menu
  &.open
    > .menu__burguer
      background-color alpha($cor1, 0)
      &:before
      &:after
        top 0
        background-color alpha($cor1, 1)

      &:before
        transform rotate(135deg)
      &:after
        transform rotate(225deg)
